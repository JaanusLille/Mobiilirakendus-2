             x:Class="Mobiilirakendus.MainPage">

    <StackLayout>
        <Frame BackgroundColor="CadetBlue" Padding="24" CornerRadius="0">
            <Label Text="Meie uskumatu äpp!!! " HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
